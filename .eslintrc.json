{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "max-len": 0,
        "object-curly-newline": 0,
        "quotes": [
            "error",
            "single"
        ],
        "react/forbid-prop-types": 0,
        "react/jsx-filename-extension": [
            1, { "extensions": [".js", ".jsx"] }
        ],
        "react/jsx-indent": [
            "error", 4
        ],
        "react/jsx-indent-props": ["error", 4],
        "react/no-multi-comp": 0,
        "semi": [
            "error",
            "always"
        ]
    }
}